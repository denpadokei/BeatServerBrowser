<UserControl x:Class="BeatServerBrowser.Core.UserControls.PlayListPreview"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:material="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:dp="clr-namespace:BeatServerBrowser.Core.DependencyPropaties"
             xmlns:local="clr-namespace:BeatServerBrowser.Core.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="120" d:DesignWidth="800">
    <Grid>
        <material:Card Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>
                <Image Grid.Column="0" dp:LazyImageBehavior.Base64Source="{Binding CoverImage}" />
                <StackPanel Grid.Column="1">
                    <Label Content="{Binding PlaylistName}"/>
                    <Label Content="{Binding Author}"/>
                    <Label Content="{Binding DependencyText}" Height="120"/>
                    <WrapPanel>
                        <Button Content="編集" Margin="10" Command="{Binding EditCommand}"/>
                        <Button Content="削除" Margin="10" Command="{Binding DeleteCommand}"/>
                    </WrapPanel>
                </StackPanel>
            </Grid>
        </material:Card>
    </Grid>
</UserControl>
