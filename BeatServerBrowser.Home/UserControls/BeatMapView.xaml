<UserControl x:Class="BeatServerBrowser.Home.UserControls.BeatMapView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:material="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:prism="http://prismlibrary.com/"
             Width="450" Height="300"
             prism:ViewModelLocator.AutoWireViewModel="True">
    <material:Card Padding="10" BorderBrush="Gray">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Text="{Binding SongTitle}" Margin="15" Height="30"/>
            <Image Grid.Row="1" Source="{Binding Cover}" Margin="5"/>
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Content="ワンクリックダウンロード" Command="{Binding DownloadCommand}" Margin="5" Cursor="Hand"/>
                <Button Grid.Column="1" Content="!bsrコピー" Command="{Binding CopyCommand}" Margin="5" Cursor="Hand"/>
            </Grid>
        </Grid>
    </material:Card>
</UserControl>
