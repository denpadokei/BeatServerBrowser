<UserControl x:Class="BeatServerBrowser.Home.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"             
             prism:ViewModelLocator.AutoWireViewModel="True">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <DockPanel Grid.Row="0">
            <Button Content="検索" Width="75" Height="25" Margin="10" Command="{Binding SerchCommand}"/>
        </DockPanel>
        <ContentControl Grid.Row="1">
            <DataGrid Grid.Row="1" Margin="10" ItemsSource="{Binding Beatmaps}" AutoGenerateColumns="false" CanUserReorderColumns="False" IsReadOnly="True" RowHeight="80">
                <DataGrid.Columns>
                    <DataGridTemplateColumn Header="カバー画像">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Image Source="{Binding Cover}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="曲名" Binding="{Binding Beatmap.Name}"/>
                    <DataGridTextColumn Header="詳細" Binding="{Binding Beatmap.Description}"/>
                </DataGrid.Columns>
            </DataGrid>
        </ContentControl>
    </Grid>
</UserControl>
